extends layout

block content
  h1= title
  form(action="/movies/add" method="post")
    p 영화 이름:
      input(type="text" name="title")
    p 영화 감독:
      input(type="text" name="director")
    p 영화 출시연도:
      input(type="text" name="year")
    p 영화 줄거리:
      textarea(name="synopsis", cols="30", rows="10")
    p
      input(type="submit" value="등록 ")